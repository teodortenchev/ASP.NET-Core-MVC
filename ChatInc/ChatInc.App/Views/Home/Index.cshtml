@{
    ViewData["Title"] = "Welcome to ChatInc.";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Messages</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
          type="text/css">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
</head>
<body>
    <div class="container-fluid d-flex justify-content-between mt-5">
        <div id="main-info" class="w-50">
            <h1 class="text-center">Welcome to Chat-Inc.</h1>
            <h2 class="text-center">A simple messenger, to do you good.</h2>
            <hr style="height: 2px" class="bg-dark" />
            <h2 class="text-center">Choose your username to begin chatting!</h2>
            <hr style="height: 2px" class="bg-dark" />

            <div id="guest-view">
                <div class="d-flex justify-content-around">

                    <button class="btn btn-dark" onclick="showLogin()">Login</button>
                    <button class="btn btn-dark" onclick="showRegister()">Register</button>

                </div>

                <hr style="height: 2px" class="bg-dark" />
            </div>
            <div id="loginform">
                <div class="form-group w-50 mx-auto">
                    <h1 class="text-center">Login</h1>
                    <label for="username" class="font-weight-bold">Username</label>
                    <input class="form-control" name="username" id="loginusername" type="text">
                    <label for="password" class="font-weight-bold">Pasword</label>
                    <input class="form-control" name="password" id="loginpassword" type="password">
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-dark" id="choose" onclick="Login()">Login</button>
                </div>
            </div>

            <div id="registerform">
                <div class="form-group w-50 mx-auto">
                    <h1 class="text-center">Register</h1>
                    <label for="username" class="font-weight-bold">Username</label>
                    <input class="form-control" name="username" id="username" type="text">
                    <label for="password" class="font-weight-bold">Pasword</label>
                    <input class="form-control" name="password" id="password" type="password">
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-dark" id="choose" onclick="Register()">Register</button>
                </div>
            </div>

            <div id="loggedin-view">
                <div class="form-group w-50 mx-auto">
                    <label for="username" class="font-weight-bold">Username</label>
                    <h3 id="username-choice"></h3>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-dark" id="reset" onclick="Logout()">Logout</button>
                </div>
            </div>
        </div>

        <div id="chat-field" class="w-50">
            <div id="messages" class="d-flex flex-column px-5 overflow-auto" style="height:570px;">
                <div class="message d-flex justify-content-start"><strong>Pesho</strong>: Hello!</div>
            </div>
            <hr style="height: 2px" class="bg-dark mx-5" />
            <div id="message-input" class="mt-3">
                <div class="form-group mx-auto d-flex justify-content-between px-5">
                    <input class="form-control mr-3" name="message" id="message" type="text">
                    <button class="btssn btn-dark" onclick="createMessage()">Send</button>
                </div>
            </div>
        </div>

    </div>

 
    <script src="~/js/site.js"></script>
</body>
</html>