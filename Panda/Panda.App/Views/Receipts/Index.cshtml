@model List<Panda.Models.Receipt.ReceiptViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">My Receipts</h1>
<hr class="hr-2 bg-panda">
<div class="d-flex justify-content-between">
    @if (Model.Count == 0)
    {
        <h2 class="text-center">You have no receipts.</h2>
    }
    else
    {
        <table class="table table-hover table-bordered">
            <thead>
                <tr class="row">
                    <th scope="col" class="col-lg-5 d-flex justify-content-center"><h3>Id</h3></th>
                    <th scope="col" class="col-lg-2 d-flex justify-content-center"><h3>Fee</h3></th>
                    <th scope="col" class="col-lg-2 d-flex justify-content-center"><h3>Issued On</h3></th>
                    <th scope="col" class="col-lg-2 d-flex justify-content-center"><h3>Recipient</h3></th>
                    <th scope="col" class="col-lg-1 d-flex justify-content-center"><h3>Actions</h3></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr class="row">
                        <th scope="row" class="col-lg-5 d-flex justify-content-center"><h5>@Model[i].Id</h5></th>
                        <td class="col-lg-2 d-flex justify-content-center"><h5>$@Model[i].Fee</h5></td>
                        <td class="col-lg-2 d-flex justify-content-center"><h5>@Model[i].IssuedOn</h5></td>
                        <td class="col-lg-2 d-flex justify-content-center"><h5>@Model[i].Recipient</h5></td>
                        <td class="col-lg-1 d-flex justify-content-center">
                            <a href="/Receipts/Details/@Model[i].Id" class="btn bg-panda text-white">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>