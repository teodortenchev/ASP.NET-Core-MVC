@model List<Panda.Models.Package.PackageViewModel>

@{
    ViewData["Title"] = "Delivered";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Delivered</h1>
<hr class="hr-2 bg-panda">
<div class="d-flex justify-content-between">
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="row">
                <th scope="col" class="col-lg-1 d-flex justify-content-center"><h3>#</h3></th>
                <th scope="col" class="col-lg-4 d-flex justify-content-center"><h3>Description</h3></th>
                <th scope="col" class="col-lg-1 d-flex justify-content-center"><h3>Weight</h3></th>
                <th scope="col" class="col-lg-3 d-flex justify-content-center"><h3>Shipping Address</h3></th>
                <th scope="col" class="col-lg-2 d-flex justify-content-center"><h3>Recipient</h3></th>
                <th scope="col" class="col-lg-1 d-flex justify-content-center"><h3>Actions</h3></th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.Count == 0)
            {
                <tr class="row">
                    <th class="justify-content-center">No packages</th>
                </tr>
                
            }
            else
            {
                for (int i = 0; i < Model.Count(); i++)
                {
                    <tr class="row">
                        <th scope="row" class="col-lg-1 d-flex justify-content-center"><h5>@(i + 1)</h5></th>
                        <td class="col-lg-4 d-flex justify-content-center"><h5>@Model[i].Description</h5></td>
                        <td class="col-lg-1 d-flex justify-content-center"><h5>@Model[i].Weight KG</h5></td>
                        <td class="col-lg-3 d-flex justify-content-center"><h5>@Model[i].ShippingAddress</h5></td>
                        <td class="col-lg-2 d-flex justify-content-center"><h5>@Model[i].Recipient</h5></td>
                        <td class="col-lg-1 d-flex justify-content-center">
                            <a href="/Packages/Details/@Model[i].Id" class="btn bg-panda text-white">Details</a>
                        </td>
                    </tr>
                }
            }


        </tbody>
    </table>
</div>